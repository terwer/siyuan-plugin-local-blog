.fold-block-wrapper
  display: flex
  align-items baseline
.fold-inner
  flex-basis: 100%  // 强制折叠内容占满一行
  flex-shrink: 0    // 防止被压缩
  margin-top: 10px  // 可选，增加上方间距
  display: block    // 确保折叠内容作为块级元素显示

/* 按钮样式 */
.fold-block-toggle-button
  display inline-block
  padding 2px 6px
  font-size 12px !important  /* 字体大小固定为12px */
  border-radius 3px           /* 边框圆角 */
  cursor pointer              /* 鼠标指针为手形 */
  line-height 12px            /* 行高为12px，确保按钮内文本垂直居中 */
  font-weight bold            /* 加粗字体 */
  margin-right 8px            /* 按钮右边距 */
  width 32px                  /* 固定宽度，确保按钮大小一致 */
  color #888                  /* 按钮文字颜色 */
  text-align center           /* 文本居中对齐 */
  &:hover
    color #666               /* 悬停时文字颜色变深 */
  &:active
    color #444               /* 点击时文字颜色进一步变深 */

.protyle-wysiwyg div[fold="1"][data-type=NodeHeading]::before
  display none